<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="list_details"
		label="COM_LIGHTCHECKLIST_SETTINGS_GLOBAL"
		>
		
		<field name="asset_id" type="hidden" filter="unset" />
		
		<field name="title" type="text" default="" size="30"
				label="COM_LIGHTCHECKLIST_TITLE" 
                labelclass="control-label" required="true">
		</field>

		<field name="alias" type="text" default="" size="30"
				label="COM_LIGHTCHECKLIST_ALIAS" 
                labelclass="control-label" required="false">
		</field>

		<field name="description_before" type="editor" buttons="true" hide="pagebreak,readmore,testimonial"
			class="inputbox"
			filter="raw"
			label="COM_LIGHTCHECKLIST_DESCRIPTION_BEFORE" required="false" />

		<field name="description_after" type="editor" buttons="true" hide="pagebreak,readmore,testimonial"
			class="inputbox"
			filter="raw"
			label="COM_LIGHTCHECKLIST_DESCRIPTION_AFTER" required="false" />

		<field name="template" type="sql" query="SELECT DISTINCT(id) AS value, name AS text FROM #__checklist_templates" multiple="single" key_field="value" value_field="text" class="inputbox" labelclass="control-label" label="COM_LIGHTCHECKLIST_LIST_TEMPLATE" required="false" />

	</fieldset>
	
	<fieldset name="list_publication" label="COM_LIGHTCHECKLIST_PUBLICATION">

		<field name="publish_date" type="calendar" default="" size="30"
				label="COM_LIGHTCHECKLIST_PUBLISH_DATE" 
                labelclass="control-label" required="false">
		</field>
		<field
				name="default"
				type="radio"
				class="btn-group"
				label="COM_LIGHTCHECKLIST_DEFAULT_LIST"
				labelclass="control-label"
				default="0">
				<option value="0">COM_LIGHTCHECKLIST_NO</option>
				<option value="1">COM_LIGHTCHECKLIST_YES</option>
		</field>
		<field name="author" type="text" default="" size="30"
				label="COM_LIGHTCHECKLIST_AUTHOR" 
                labelclass="control-label" required="false">
		</field>
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_CONTENT_FIELD_LANGUAGE_DESC" class="selectlist">
			<option value="*">JALL</option>
		</field>

	</fieldset>

	<fieldset name="checklist_permissions"
		label="COM_LIGHTCHECKLIST_PERMISSIONS"
	>
		<field name="list_access" type="sql" query="SELECT DISTINCT(id) AS value, title AS text FROM #__usergroups" multiple="single" key_field="value" value_field="text" class="inputbox" labelclass="control-label" label="COM_LIGHTCHECKLIST_LIST_ACCESS" required="false" />

		<field name="comment_access" type="sql" query="SELECT DISTINCT(id) AS value, title AS text FROM #__usergroups" multiple="single" key_field="value" value_field="text" class="inputbox" labelclass="control-label" label="COM_LIGHTCHECKLIST_COMMENT_ACCESS" required="false" />
	</fieldset>

	<fieldset name="checklist_metadata"
		label="COM_LIGHTCHECKLIST_META_DATA"
	>
		<field name="meta_keywords" type="textarea" class="inputbox" label="COM_LIGHTCHECKLIST_META_KEYWORDS" required="false" default=""/>

		<field name="meta_description" type="textarea" class="inputbox" label="COM_LIGHTCHECKLIST_META_DESCRIPTION" required="false" default=""/>

	</fieldset>
		
	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

	<field name="rules" type="rules"
			component="com_lightchecklist"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="list" />
	</fieldset>
</form>
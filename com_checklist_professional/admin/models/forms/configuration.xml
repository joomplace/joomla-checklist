<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		
		<field name="social_twitter_use"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_TWITTER_USE"
			description="COM_CHECKLIST_BE_CONFIG_TWITTER_USE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="social_twitter_size"
			type="radio"
			onclick="onRadioTwitterSizeClick(this, event);"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_TWITTER_SIZE"
			description="COM_CHECKLIST_BE_CONFIG_TWITTER_SIZE_DESC">
			<option value="standart">COM_CHECKLIST_BE_CONFIG_TWITTER_SIZE_STANDART</option>
			<option value="large">COM_CHECKLIST_BE_CONFIG_TWITTER_SIZE_LARGE</option>
		</field>
		
		<field name="social_twitter_annotation"
			type="radio"
			onclick="onRadioTwitterAnnotationClick(this, event);"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_TWITTER_ANNOTATION"
			description="COM_CHECKLIST_BE_CONFIG_TWITTER_ANNOTATION_DESC">
			<option value="none">COM_CHECKLIST_BE_CONFIG_TWITTER_ANNOTATION_NONE</option>
			<option value="horizontal">COM_CHECKLIST_BE_CONFIG_TWITTER_ANNOTATION_HORIZONTAL</option>
			<option value="vertical">COM_CHECKLIST_BE_CONFIG_TWITTER_ANNOTATION_VERTICAL</option>
		</field>
		
		<field name="social_twitter_language"
			type="list"
			label="COM_CHECKLIST_BE_CONFIG_TWITTER_LANGUAGE"
			description="COM_CHECKLIST_BE_CONFIG_TWITTER_LANGUAGE_DESC" />
		
		<field name="social_linkedin_use"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_LINKEDIN_USE"
			description="COM_CHECKLIST_BE_CONFIG_LINKEDIN_USE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="social_linkedin_annotation"
			type="radio"
			onclick="onRadioLinkedinAnnotationClick(this, event);"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_LINKEDIN_ANNOTATION"
			description="COM_CHECKLIST_BE_CONFIG_LINKEDIN_ANNOTATION_DESC">
			<option value="none">COM_CHECKLIST_BE_CONFIG_LINKEDIN_ANNOTATION_NONE</option>
			<option value="right">COM_CHECKLIST_BE_CONFIG_LINKEDIN_ANNOTATION_RIGHT</option>
			<option value="top">COM_CHECKLIST_BE_CONFIG_LINKEDIN_ANNOTATION_TOP</option>
		</field>
		
		<field name="social_facebook_use"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_FACEBOOK_USE"
			description="COM_CHECKLIST_BE_CONFIG_FACEBOOK_USE_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="social_facebook_verb"
			type="radio"
			onclick="onRadioFacebookVerbClick(this, event);"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_FACEBOOK_VERB"
			description="COM_CHECKLIST_BE_CONFIG_FACEBOOK_VERB_DESC">
			<option value="like">COM_CHECKLIST_BE_CONFIG_FACEBOOK_VERB_LIKE</option>
			<option value="recommend">COM_CHECKLIST_BE_CONFIG_FACEBOOK_VERB_RECOMMEND</option>
		</field>
		
		<field name="social_facebook_layout"
			type="radio"
			onclick="onRadioFacebookLayoutClick(this, event);"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_FACEBOOK_LAYOUT"
			description="COM_CHECKLIST_BE_CONFIG_FACEBOOK_LAYOUT_DESC">
			<option value="standart">COM_CHECKLIST_BE_CONFIG_FACEBOOK_LAYOUT_STANDART</option>
			<option value="button_count">COM_CHECKLIST_BE_CONFIG_FACEBOOK_LAYOUT_BUTTONCOUNT</option>
			<option value="box_count">COM_CHECKLIST_BE_CONFIG_FACEBOOK_LAYOUT_BOXCOUNT</option>
		</field>
		
		<field name="social_facebook_font"
			type="list"
			label="COM_CHECKLIST_BE_CONFIG_FACEBOOK_FONT"
			description="COM_CHECKLIST_BE_CONFIG_FACEBOOK_FONT_DESC" />

		<field name="useDisqus"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_BE_CONFIG_DISQUS_USE">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="disqusSubDomain" type="text" default="" size="30"
				label="COM_CHECKLIST_DISQUS_SUB_DOMAIN" 
                labelclass="control-label">
		</field>

		<field name="fbadmin" type="text" default="" size="30"
				label="COM_CHECKLIST_FB_ADMIN" 
                labelclass="control-label">
		</field>

		<field name="fbappid" type="text" default="" size="30"
				label="COM_CHECKLIST_FBAPP_ID" 
                labelclass="control-label">
		</field>

		<field name="rules"
			type="rules"
			component="com_checklist"
			section="component"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL" />

		<field name="moderateChecklist"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_MODERATE_LIST">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="useNotification"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_EMAIL_NOTIFICATION">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field name="emailsNotification" type="text" default="" size="30"
				label="COM_CHECKLIST_EMAILS_NOTIFICATION" 
                labelclass="control-label">
		</field>

		<field name="print_option"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_PRINT_OPTION">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="pdf_option"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_PDF_OPTION">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="rating_option"
			type="radio"
			class="btn-group"
			label="COM_CHECKLIST_RATING_OPTION">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

	</fieldset>
</form>
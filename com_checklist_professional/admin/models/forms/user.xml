<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="user_info"
		label="COM_CHECKLIST_USER_INFO"
		>
		
		<field name="user_id" type="hidden" filter="unset" />
		
		<field name="website_field" type="text" default="" size="30"
				label="COM_CHECKLIST_WEBSITE_URL" 
                labelclass="control-label" required="false">
		</field>

		<field name="twitter_field" type="text" default="" size="30"
				label="COM_CHECKLIST_TWITTER" 
                labelclass="control-label" required="false">
		</field>

		<field name="facebook_field" type="text" default="" size="30"
				label="COM_CHECKLIST_FACEBOOK" 
                labelclass="control-label" required="false">
		</field>

		<field name="google_field" type="text" default="" size="30"
				label="COM_CHECKLIST_GOOGLE_PLUS" 
                labelclass="control-label" required="false">
		</field>

		<field name="description_field" type="textarea" class="inputbox" label="COM_CHECKLIST_DESCRIPTION_FIELD" required="false" default=""/>

	</fieldset>
</form>